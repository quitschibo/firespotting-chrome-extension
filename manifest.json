{
  "manifest_version": 2,
  "name": "Firespotting! Interesting Ideas, Every Day!",
  "version": "1.0",
  "description": "Displays recent ideas from Firespotting",
  "icons": { "48": "icon.png",
	         "128": "icon.png" },
  "browser_action": {
    "default_title": "Firespotting",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
	"background": {
    "pages": ["background.html"]
  },
	"options_page":"options.html",
  "permissions": [
    "tabs",
    "https://firespotting.com/",
    "http://firespotting.com/",
    "notifications"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://firespotting.com; object-src 'self' 'unsafe-eval' https://firespotting.com"
}
